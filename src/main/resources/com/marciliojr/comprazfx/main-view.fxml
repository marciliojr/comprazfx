<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane xmlns:fx="http://javafx.com/fxml/1" fx:id="tabPane" maxHeight="-Infinity" maxWidth="-Infinity"
         minHeight="-Infinity"
         minWidth="-Infinity" prefHeight="635.0" prefWidth="937.0" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.marciliojr.comprazfx.ApplicationFX">
    <tabs>
        <Tab text="Cadastrar Notas">
            <content>
                <AnchorPane>
                    <children>
                        <VBox spacing="10.0" fillWidth="true" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"
                              AnchorPane.rightAnchor="10.0">
                            <HBox spacing="10.0">
                                <Label text="Nome Estabelecimento:"/>
                                <TextField fx:id="nomeEstabelecimentoTextField" HBox.hgrow="ALWAYS">
                                    <tooltip>
                                        <Tooltip text="Nome do Estabelecimento da compra"/>
                                    </tooltip>
                                </TextField>
                            </HBox>
                            <HBox spacing="10.0">
                                <Label text="Data Compra:"/>
                                <DatePicker fx:id="dataCadastro" HBox.hgrow="ALWAYS">
                                    <tooltip>
                                        <Tooltip text="Data que a compra foi feita"/>
                                    </tooltip>
                                </DatePicker>
                            </HBox>
                            <HBox spacing="10.0">
                                <Button fx:id="carregarPdfButton" mnemonicParsing="false" onAction="#carregarPdf"
                                        text="Carregar PDF Nota"/>
                                <TextField fx:id="fileNameTextField" HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" onAction="#cadastrar" text="Cadastrar"/>
                            </HBox>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Listar Notas">
            <content>
                <AnchorPane>
                    <children>
                        <VBox spacing="10.0" fillWidth="true" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"
                              AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
                            <HBox spacing="10.0">
                                <Label text="Estabelecimento:"/>
                                <TextField fx:id="nomeEstabelecimentoTextFieldPesquisa" HBox.hgrow="ALWAYS"/>
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Data Inicio:"/>
                                <DatePicker fx:id="dataInicio"/>
                                <Label text="Data Fim:"/>
                                <DatePicker fx:id="dataFim"/>
                                <Button mnemonicParsing="false" onAction="#pesquisar" text="Pesquisar"/>
                                <Button mnemonicParsing="false" onAction="#gerarPDF" text="Gerar PDF"/>
                            </HBox>
                            <TableView fx:id="tabelaItens" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colunaNome" text="Nome"/>
                                    <TableColumn fx:id="colunaQuantidade" text="Quantidade"/>
                                    <TableColumn fx:id="colunaUnidade" text="Unidade"/>
                                    <TableColumn fx:id="colunaValor" text="Valor UnitÃ¡rio"/>
                                    <TableColumn fx:id="colunaValorTotal" text="Valor Total"/>
                                    <TableColumn fx:id="colunaEstabelecimento" text="Estabelecimento"/>
                                    <TableColumn fx:id="colunaDataCompra" text="Data de compra"/>
                                </columns>
                            </TableView>
                            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                                <Label style="-fx-font-weight: bold;" text="Total: "/>
                                <Label fx:id="somatorioValorItem" style="-fx-font-weight: bold;" text="valor"
                                       textFill="#f50000"/>
                            </HBox>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Gerenciar Compras">
            <content>
                <AnchorPane>
                    <children>
                        <VBox spacing="10.0" fillWidth="true" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"
                              AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
                            <HBox spacing="10.0">
                                <Label text="Estabelecimento:"/>
                                <TextField fx:id="nomeEstabelecimentoTextFieldPesquisaCompras" HBox.hgrow="ALWAYS"/>
                            </HBox>
                            <HBox spacing="10.0" alignment="CENTER_LEFT">
                                <Label text="Data Inicio:"/>
                                <DatePicker fx:id="dataInicioCompras"/>
                                <Label text="Data Fim:"/>
                                <DatePicker fx:id="dataFimCompras"/>
                                <Button mnemonicParsing="false" onAction="#pesquisarCompras" text="Pesquisar"/>
                            </HBox>
                            <TableView fx:id="tabelaCompras" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colunaEstabelecimentoCompra" text="Estabelecimento"/>
                                    <TableColumn fx:id="colunaDataCompraCompra" text="Data Compra"/>
                                    <TableColumn fx:id="colunaValorTotalCompra" text="Valor R$"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>